FROM nginx

# ูุญุฐู ุงูุตูุญุฉ ุงูุงูุชุฑุงุถูุฉ (ุงุฎุชูุงุฑู ูููู ุฌูุฏ)
RUN rm -rf /usr/share/nginx/html/*

COPY . /usr/share/nginx/html/

# ๐ ูุนุฏูู ุตูุงุญูุงุช ุงููููุงุช ุญุชู ูุณุชุทูุน Nginx ูุฑุงุกุชูุง
RUN chmod -R 755 /usr/share/nginx/html && \
    chown -R nginx:nginx /usr/share/nginx/html

EXPOSE 80